         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.tudresden.inf.st.bigraphs</groupId>
    <artifactId>framework-parent</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Bigraph Parent Project</name>
    <description>A bigraphical framework for manipulating bigraphical reactive systems.</description>

    <modules>
        <module>core</module>
        <module>matching</module>
        <module>visualization</module>
        <module>bigraph-store</module>
    </modules>

    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <guava.version>27.0.1-jre</guava.version>
        <jgrapht.version>1.3.0</jgrapht.version>
        <emf-version>2.15.0</emf-version>
        <emf-common-version>2.15.0</emf-common-version>
        <emf-ecore-version2>2.15.0</emf-ecore-version2>
        <emf-ecore-version>2.3.0-v200706262000</emf-ecore-version>
<!--        <emf.cdo.version>4.6.2</emf.cdo.version>-->
        <emf.cdo.version>4.5.0</emf.cdo.version>
        <eclipse.mirror>http://mirror.ibcp.fr/pub/eclipse/</eclipse.mirror>
        <junit.version>5.4.0</junit.version>
        <log4j.version>2.11.1</log4j.version>
        <graphviz.version>0.8.3</graphviz.version>
    </properties>

    <repositories>
        <repository>
            <id>Eclipse</id>
            <!--<layout>p2</layout>-->
            <url>${eclipse.mirror}/releases/photon/</url>
        </repository>
        <!-- add TMF repository for latest Xtend -->
        <repository>
            <id>TMF Repo</id>
            <!--<layout>p2</layout>-->
            <url>${eclipse.mirror}/modeling/tmf/xtext/updates/releases/</url>
        </repository>
    </repositories>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>${java.version}</source>
                        <target>${java.version}</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

